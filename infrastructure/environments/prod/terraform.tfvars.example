# Secrets for Azure Key Vault
key_vault_secrets = {
  "ConnectionStrings--DefaultConnection" = "Server=tcp:sql-inventory-prod.database.windows.net,1433;Initial Catalog=InventoryDB-Prod;User ID=youruser;Password=YourSecurePassword123!;Encrypt=True;"
  "ApiKey"                               = "your-prod-api-key-here"
  "ExternalApiSecret"                    = "your-prod-external-api-secret-here"
}

