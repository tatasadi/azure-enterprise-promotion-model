{
  "name": "azure-cicd-carousel-slides",
  "version": "1.0.0",
  "description": "LinkedIn carousel presentations for Azure Enterprise Promotion Model",
  "type": "module",
  "scripts": {
    "dev": "slidev carousel-1-antipatterns.md",
    "build": "slidev build carousel-1-antipatterns.md",
    "export:pdf": "slidev export carousel-1-antipatterns.md --format pdf --timeout 60000 --with-clicks --wait 2000",
    "export:png": "slidev export carousel-1-antipatterns.md --format png --output ./exports --timeout 60000 --with-clicks --wait 2000 --scale 2",
    "export:all": "npm run export:pdf && npm run export:png"
  },
  "keywords": [
    "azure",
    "devops",
    "slidev",
    "linkedin",
    "carousel",
    "cicd"
  ],
  "author": "Ehsan Tatasadi",
  "license": "MIT",
  "devDependencies": {
    "@slidev/cli": "0.50.0-beta.11",
    "@slidev/theme-default": "latest",
    "playwright-chromium": "^1.40.0"
  }
}
